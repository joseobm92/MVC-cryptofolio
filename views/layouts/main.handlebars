  <link rel="stylesheet" href="/css/style.css">
  <title>Document</title>
</head>

<body>

  <div class="jumbotron jumbotron-fluid bg-info">
    <div class="container">
      <h1 class="display-4">Cryptofolio</h1>
      <p class="lead">Your preferred cryptcurrency watch list and your one source on everything crypto. </p>
    </div>
  </div>

  <div class="container bg-white">
    <nav class="nav justify-content-between">
      <div class="form-inline">
        <a class="nav-link active" href="/">Home</a>
        <a class="nav-link" href="/watchlist">Watchfolio</a>
        {{#if logged_in}}
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
            Cryptocurrencies
          </a>
          <div class="dropdown-menu">
            <a class="dropdown-item" href="/marketcap">By Market Cap</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="/volume">By Volume</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="/exchanges">Popular Exchanges</a>
          </div>
        </li>
        <a class="nav-link" href="/" id="logout">logout</a>
        {{else}}
        <a class="nav-link" href="/login">login</a>
        {{/if}}
      </div>
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" id="crypto-input" type="search" placeholder="Bitcoin" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" id="search-btn" type="submit">Search</button>
      </form>
    </nav>
    {{{ body }}}
  </div>


</body>


